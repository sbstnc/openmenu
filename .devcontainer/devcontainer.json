// For format details, see https://aka.ms/devcontainer.json.
{
  "name": "Dreamcast Dev",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VER": "gcc-9"
    }
  },
  "runArgs": [
    "--userns=keep-id"
  ],
  "containerEnv": {
    "HOME": "/home/dev"
  },
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-vscode.cpptools"
      ]
    }
  },
  "remoteUser": "dev"
}